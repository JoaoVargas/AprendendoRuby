<div id="friends">
</div>

<table class="table table-striped table-hover table-borderless align-middle">
  <thead class="thead align-middle">
    <tr>
      <th>
        First Name
      </th>
      <th>
        Last Name
      </th>
      <th>
        Email
      </th>
      <th>
        Phone
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td>
          <%= friend.first_name %>
        </td>

        <td>
          <%= friend.last_name %>
        </td>

        <td>
          <%= friend.email %>
        </td>

        <td>
          <%= friend.phone %>
        </td>

        <td>
          <%= link_to "Show", friend, class:"btn btn-primary btn-sm" %>
        </td>
        <td>
          <%= link_to "Edit", edit_friend_path(friend), class:"btn btn-secondary btn-sm" %>
        </td>
        <td>
          <%= link_to "Remove", friend, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-primary" %>